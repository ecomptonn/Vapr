<section class="main-wrapper">
    {{! game card render  }}
    <div class="game-card-container">
        {{#each steamData.recentGames.response.games}}
            <div class="game-card">
                <div class="game-card__image-container">
                    <img
                        src="{{header_image}}"
                        alt="{{name}}"
                        class="game-card__image"
                    />
                    <div class="game-card__overlay">
                        <h3 class="game-card__title">{{name}}</h3>
                    </div>
                </div>
                <div class="game-card__details">
                    <div class="game-card__stat">
                        <span>Total Playtime:</span>
                        <span>{{playtime_forever_hours}} hrs</span>
                    </div>
                    <div class="game-card__stat">
                        <span>Last 2 Weeks:</span>
                        <span>{{playtime_2weeks_hours}} hrs</span>
                    </div>
                    <div class="game-card__last-played">
                        Last Played:
                        {{last_played_date}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    {{! friend carousel }}
    <div class="carousel-container">
        <button
            class="carousel-container__nav-button carousel-container__nav-button--prev"
            data-carousel="friends"
            data-direction="prev"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                height="48px"
                viewBox="0 -960 960 960"
                width="48px"
                fill="#FFFFFF"
            ><path
                    d="M561-240 320-481l241-241 43 43-198 198 198 198-43 43Z"
                /></svg>
        </button>
        <div class="carousel-container__content" id="friends-carousel">
            {{#if steamData.friends.friendslist.onlineFriends.length}}
                {{#each steamData.friends.friendslist.onlineFriends}}
                    <div class="friend-card">
                        <img
                            src="{{avatarfull}}"
                            alt="{{personaname}} avatar"
                        />
                        <div class="friend-info">
                            <h3 class="friend-name">{{personaname}}</h3>
                            <p
                                class="friend-status {{statusText}}"
                            >{{statusText}}</p>
                            {{#if gameextrainfo}}
                                <p class="friend-game">Playing:
                                    {{gameextrainfo}}</p>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="empty-friends-message">
                    <p>No friends are currently online.</p>
                </div>
            {{/if}}
        </div>
        <button
            class="carousel-container__nav-button carousel-container__nav-button--next"
            data-carousel="friends"
            data-direction="next"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                height="48px"
                viewBox="0 -960 960 960"
                width="48px"
                fill="#FFFFFF"
            ><path
                    d="M530-481 332-679l43-43 241 241-241 241-43-43 198-198Z"
                /></svg>
        </button>
    </div>
</section>